<div class="page-header">
  <h1>Movie #<%= @Movie.id %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Title</dt>
  <dd><%= @Movie.title %></dd>

  <dt>Year</dt>
  <dd><%= @Movie.year %></dd>

  <dt>Duration</dt>
  <dd><%= @Movie.duration %></dd>

  <dt>Description</dt>
  <dd><%= @Movie.description %></dd>

  <dt>Director ID</dt>
  <dd><%= @Movie.director_id %></dd>

  <dt>Image</dt>
  <dd><img src="<%= @Movie.image_url %>" width="320"></dd>


</dl>
